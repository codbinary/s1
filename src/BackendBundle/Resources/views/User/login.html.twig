{% extends 'BackendBundle::layout.html.twig' %}

{% block content %}

  <!-- Si el usuario esta autenticado redireccionamos -->
  {% if is_granted('IS_AUTHENTICATED_FULLY') %}
    <script>
        var url = 'http://localhost/projects/symfonys/sym3/web/app.php/';
        window.location.href = url + "admin/dashboard";
    </script>
  {% endif %}
    
    <body>

    {% if app.user != null %}
        
    {% endif %}

  <div class="app app-blue-sky">

<div class="app-container app-login">
  <div class="flex-center">
    <div class="app-header"></div>
    <div class="app-body">
      <div class="loader-container text-center">
          <div class="icon">
            <div class="sk-folding-cube">
                <div class="sk-cube1 sk-cube"></div>
                <div class="sk-cube2 sk-cube"></div>
                <div class="sk-cube4 sk-cube"></div>
                <div class="sk-cube3 sk-cube"></div>
              </div>
            </div>
          <div class="title">Logging in...</div>
      </div>
      <div class="app-block">
      <div class="app-form">
        <div class="form-header">
          <div class="app-brand"><span class="highlight">CCPUCP</span> Admin</div>
        </div>
        <form action="{{path("login_check")}}" method="post">
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon1">
                <i class="fa fa-user" aria-hidden="true"></i></span>
              <input  type="text" 
                      class="form-control" 
                      placeholder="Username"        
                      aria-describedby="basic-addon1"
                      id="username"
                      name="_username"
                      value="{{ last_username }}">
            </div>
            <div class="input-group">
              <span class="input-group-addon" id="basic-addon2">
                <i class="fa fa-key" aria-hidden="true"></i></span>
              <input  type="password" 
                      class="form-control" 
                      placeholder="Password" 
                      aria-describedby="basic-addon2"
                      id="password"
                      name="_password">
            </div>
            <div class="text-center">
                <input type="submit" class="btn btn-success" value="Login">
                <input type="hidden" name="_target_path" value="/admin/dashboard">
            </div>
        </form>

        <div class="form-line">
          <!---<div class="title">OR</div>-->
        </div>
        <div class="form-footer">
          <!--<button type="button" class="btn btn-default btn-sm btn-social __facebook">
            <div class="info">
              <i class="icon fa fa-facebook-official" aria-hidden="true"></i>
              <span class="title">Login with Facebook</span>
            </div>
          </button>-->
        </div>
      </div>
      </div>
    </div>
    <div class="app-footer">
    </div>
  </div>
</div>

  </div>

{% endblock %}